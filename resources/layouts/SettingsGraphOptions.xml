<resources>

<layouts>

<layout id="SettingsGraphOptions">
    <drawable id="backgroundGrey"  />
    <button x="0" y="0" width="800" height="800" >
        <state id="stateDefault" bitmap="@Drawables.BoutonVide" />
    </button>
    <label x="50%" y="13%" text="Graph options" font="Gfx.FONT_LARGE" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER" />

     <button  x="5%" y="28%" width="18%" height="16%" >
        <state id="stateDefault" drawable="@Drawables.settingsDuree1" />
        <state id="stateHighlighted" drawable="@Drawables.settingsDureeActive1" />
        <param name="behavior">UN</param>
    </button>  
     <button x="29%" y="28%" width="18%" height="16%" >
        <state id="stateDefault" drawable="@Drawables.settingsDuree2" />
        <state id="stateHighlighted" drawable="@Drawables.settingsDureeActive2" />
        <param name="behavior">DEUX</param>
    </button>
     <button x="53%" y="28%" width="18%" height="16%" >
        <state id="stateDefault" drawable="@Drawables.settingsDuree3" />
        <state id="stateHighlighted" drawable="@Drawables.settingsDureeActive3" />
        <param name="behavior">QUATRE</param>
    </button>
     <button x="77%" y="28%" width="18%" height="16%" >
        <state id="stateDefault" drawable="@Drawables.settingsDuree4" />
        <state id="stateHighlighted" drawable="@Drawables.settingsDureeActive4" />
        <param name="behavior">SIX</param>
    </button>



    <label x="50%" y="47%" text="Scale" font="Gfx.FONT_LARGE" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER" />

     <button x="20%" y="65%" width="25%" height="16%" >
        <state id="stateDefault" drawable="@Drawables.settingsScale1" />
        <state id="stateHighlighted" drawable="@Drawables.settingsScaleActive1" />
        <param name="behavior">LOG</param>
    </button>
    
     <button x="55%" y="65%" width="25%" height="16%" >
        <state id="stateDefault" drawable="@Drawables.settingsScale2" />
        <state id="stateHighlighted" drawable="@Drawables.settingsScaleActive2" />
        <param name="behavior">LINEAR</param>
    </button>



     <button  x="40%" y="80%" width="20%" height="20%" >
        <state id="stateDefault" bitmap="@Drawables.back" />
        <param name="behavior">back</param>
    </button>


</layout>

</layouts>

</resources>