<resources>

<layouts>

<layout id="SettingsFields">
    <drawable id="backgroundGrey"  />
    <label x="50%" y="5%" text="Fields data" font="Gfx.FONT_MEDIUM" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER" />

    <button x="0" y="0" width="800" height="800" >
        <state id="stateDefault" bitmap="@Drawables.BoutonVide" />
    </button>

     <button x="25%" y="20%" width="50%" height="16%" >
        <state id="stateDefault" drawable="@Drawables.settingsSourceBg_and_Units1" />
        <state id="stateHighlighted" drawable="@Drawables.settingsSourceBg_and_UnitsActive1" />
        <param name="behavior">field1</param>
    </button>
     <button x="25%" y="40%" width="50%" height="16%" >
        <state id="stateDefault" drawable="@Drawables.settingsSourceBg_and_Units2" />
        <state id="stateHighlighted" drawable="@Drawables.settingsSourceBg_and_UnitsActive2" />
        <param name="behavior">field2</param>
    </button>
     <button x="25%" y="60%" width="50%" height="16%" >
        <state id="stateDefault" drawable="@Drawables.settingsSourceBg_and_Units3" />
        <state id="stateHighlighted" drawable="@Drawables.settingsSourceBg_and_UnitsActive3" />
        <param name="behavior">field3</param>
    </button>

     <button  x="40%" y="80%" width="20%" height="20%" >
        <state id="stateDefault" bitmap="@Drawables.back" />
        <param name="behavior">back</param>
    </button>

    </layout>

</layouts>

</resources>